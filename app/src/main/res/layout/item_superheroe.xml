<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivSuperheroe"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <TextView
        android:id="@+id/tvSuperHeroe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SuperHeroina"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivSuperheroe"/>

    <TextView
        android:id="@+id/tvNombreReal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adair Duarte"
        app:layout_constraintTop_toBottomOf="@id/tvSuperHeroe"
        app:layout_constraintStart_toEndOf="@id/ivSuperheroe"/>
    <TextView
        android:id="@+id/tvPublicista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITSU"
        app:layout_constraintTop_toBottomOf="@id/tvNombreReal"
        app:layout_constraintStart_toEndOf="@id/ivSuperheroe"/>


</androidx.constraintlayout.widget.ConstraintLayout>